    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Jest with Debug",
            "type": "node",
            "request": "launch",
            "port": 9229,
            "args": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest",
                "--config=${workspaceRoot}/jest.config.js",
                "--runInBand",
                "--detectOpenHandles"
            ]
        }
    ]
}